
  <h1>All Products</h1>
  <hr>
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-sm-3">
        <p><%= image_tag product.image %></p>
        <h4><b><%= product.name %></b></h4>
        <div class="pricing">
          <h4>$<%= product.price %></h4>
        </div>
      </div>
    <% end %>
  </div>
